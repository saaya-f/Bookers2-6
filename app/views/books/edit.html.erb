    <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2>Editing Book</h2>
      <%= form_with model: @book, local:true do |f| %>
        <% if @book.errors.any? %>
          <div id="error_explanation">
            <h2><%= @book.errors.count %>error prohibited this obj from being saved:</h2>
            <ul>
             <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
             <% end %>
             </ul>
          </div>
        <% end %>
        <div class="field row">
          <label for="book_title">Title</label>
          <%= f.text_field :title, class:"col-xs-12 bool-title" %>
        </div>
        <div class="field row">
           <label for="book_opinion">Opinion</label>
            <%= f.text_area :body, class:"col-xs-12" %>
        </div>
        <div class:"actions rouw">
          <%= f.submit "Update Book", class:"btn btn-primary col-xs-12" %>
      <% end %>
        <%= link_to "Show", book_path %>
        |
        <%= link_to "Back", books_path %>
      </div>
    </div>


