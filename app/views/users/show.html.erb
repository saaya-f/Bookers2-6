    <div class="row">
      <div class="col-xs-3">
        <h2>User info</h2>
        <%= render 'users/profile', user: @user %>

        <h2>New book</h2>
        <%= render 'books/form', book: @book %>
      </div>
      <div class="col-xs-9">
        <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |book| %>
              <tr>
                <td>
                  <%= attachment_image_tag @user, :profile_image, size: '60x60', format: 'jpeg', fallback: "no_image.jpg" %>
                </td>
                <td>
                  <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                  <% end %>
                </td>
                <td>
                  <%= book.body %>
                </td>
                <td>
                  <%= link_to "コメント数：#{book.book_comments.count}", book_path(book.id) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
