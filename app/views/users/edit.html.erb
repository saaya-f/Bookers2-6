    <h2>User info</h2>
    <%= form_with model: @user, local:true do |f| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= @user.errors.count %>error prohibited this obj from being saved:</h2>
          <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <label for="user_name">Name</label>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <label for="user_profile_image">Image</label>
        <div>
          <div class="user-edit-image">
            <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, follback: "no_image.jpg" %>
          </div>
          <%= f.attachment_field :profile_image %>
        </div>
      </div>

      <div class="field">
        <label for="user_introduction">Introduction</label>
        <%= f.text_area :introduction %>
      </div>
      <%= f.submit "Update User" %>
    <% end %>



